@{
    var pageName = ViewContext.RouteData.Values["action"].ToString();
}

<h2 class="global-title">Deepend<strong>Ancestry</strong></h2>

<form role="form">
    <div class="col-md-6">
        <div class="form-group">
            <input type="text" class="form-control" id="searched-text" />
        </div>

        <div class="form-group">
            Gender:
            <div class="checkbox-inline">
                <label><input type="checkbox" id="male-checkox" value="m">Male</label>
            </div>
            <div class="checkbox-inline">
                <label><input type="checkbox" id="female-checkox" value="f">Female</label>
            </div>
        </div>

        @{
            if (pageName.ToLower().Equals("advanced"))
            {
                <div class="form-group">
                    Direction:
                    <div class="radio-inline">
                        <label><input type="radio" value="ancestors" name="family">Ancestors</label>
                    </div>
                    <div class="radio-inline">
                        <label><input type="radio" value="descendants" name="family">Descendants</label>
                    </div>
                </div>
            }
        }
    </div>
    <div class="col-md-6">
        <button type="button" class="btn btn-block btn-info" onclick="CensusSearchAPI.loadCensusData()">
            @(pageName.ToLower().Equals("advanced") ? "Advanced Search" : "Search")
        </button>
        @{
            if (!pageName.ToLower().Equals("advanced"))
            {
                <i class="btn btn-block">@Html.ActionLink("Advanced search", "advanced", "Home")</i>
            }
        }
    </div>
</form>
